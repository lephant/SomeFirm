<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <var class="ru.lephant.learning.spring.SomeFirmWebFlow.operation.service.impl.OperationServiceImpl" name="operationService" />

    <view-state id="list" view="list.xhtml">
        <on-render>
            <evaluate expression="operationService.listOperation()" result="viewScope.operations" result-type="dataModel"/>
        </on-render>
    </view-state>

</flow>