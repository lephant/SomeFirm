<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <view-state id="list" view="list.xhtml">
        <on-render>
            <evaluate expression="storageService.listStorageContent()" result="viewScope.contents" result-type="dataModel"/>
        </on-render>
        
        <transition on="editStorage" to="edit"/>
    </view-state>
    
    <view-state id="edit" view="edit.xhtml">
        <on-entry>
            <evaluate expression="storageService.listStorageContent()" result="viewScope.contents" result-type="dataModel"/>
        </on-entry>
    </view-state>

</flow>